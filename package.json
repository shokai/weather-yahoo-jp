{
  "private": true,
  "name": "weather-yahoo-jp",
  "scripts": {
    "bootstrap": "./bin/run-each-packages npm i && lerna bootstrap",
    "mocha": "mocha packages/*/*/test_*.es6 --compilers js:babel-register",
    "eslint": "eslint packages/*/*/*.es6",
    "test": "npm run eslint && npm run mocha",
    "build": "./bin/run-each-packages --parallel babel src/ --out-dir lib/ --source-maps inline",
    "watch": "parallelshell 'npm run build -- --watch' 'chokidar \"packages/*/*/*.es6\" -c \"npm run eslint\"'",
    "build:urllist": "cd packages/weather-yahoo-jp && babel-node tool/create-forecast-url-list.es6 forecast-url.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shokai/weather-yahoo-jp.git"
  },
  "author": "Sho Hashimoto <hashimoto@shokai.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shokai/weather-yahoo-jp/issues"
  },
  "homepage": "https://github.com/shokai/weather-yahoo-jp#readme",
  "description": "get weather info from yahoo.co.jp",
  "dependencies": {
    "async": "^1.5.2",
    "babel-cli": "^6.4.5",
    "babel-eslint": "^4.1.6",
    "babel-preset-es2015": "^6.3.13",
    "chai": "^3.4.1",
    "chokidar-cli": "^1.2.0",
    "co": "^4.6.0",
    "eslint": "^1.10.3",
    "eslint-plugin-if-in-test": "^0.2.0",
    "lerna": "^1.1.0",
    "mocha": "^2.4.2",
    "parallelshell": "^2.0.0"
  }
}
